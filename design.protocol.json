{
  "meta": {
    "name": "GA-Like Dashboard Design Protocol",
    "version": "1.0.0",
    "description": "Design system inspired by analytics dashboard patterns"
  },

  "layout": {
    "grid": {
      "columns": 12,
      "gutter": "24px",
      "margin": "32px",
      "cardRadius": "12px",
      "cardPadding": "24px"
    }
  },

  "color": {
    "background": {
      "primary": "#FFFFFF",
      "secondary": "#F8F9FA",
      "sidebar": "#F1F3F4"
    },
    "text": {
      "primary": "#202124",
      "secondary": "#5F6368",
      "disabled": "#9AA0A6"
    },
    "brand": {
      "primary": "#1A73E8",
      "hover": "#1558B0",
      "light": "#E8F0FE"
    },
    "status": {
      "success": "#188038",
      "warning": "#F9AB00",
      "error": "#D93025",
      "info": "#1A73E8"
    },
    "chart": {
      "series1": "#1A73E8",
      "series2": "#34A853",
      "series3": "#FBBC05",
      "series4": "#EA4335",
      "gridLine": "#E0E0E0"
    }
  },

  "typography": {
    "fontFamily": "'Roboto', 'Noto Sans JP', sans-serif",
    "sizes": {
      "h1": "24px",
      "h2": "20px",
      "h3": "16px",
      "body": "14px",
      "caption": "12px",
      "metric": "28px"
    },
    "weights": {
      "regular": 400,
      "medium": 500,
      "bold": 600
    },
    "lineHeight": {
      "normal": 1.5,
      "dense": 1.3
    }
  },

  "components": {
    "card": {
      "background": "#FFFFFF",
      "border": "1px solid #E0E0E0",
      "shadow": "0px 1px 2px rgba(0,0,0,0.05)",
      "radius": "12px",
      "padding": "24px"
    },
    "metricBlock": {
      "labelSize": "12px",
      "valueSize": "28px",
      "valueWeight": 600,
      "trendUpColor": "#188038",
      "trendDownColor": "#D93025"
    },
    "button": {
      "height": "36px",
      "radius": "8px",
      "primary": {
        "background": "#1A73E8",
        "text": "#FFFFFF"
      },
      "secondary": {
        "background": "#E8F0FE",
        "text": "#1A73E8"
      }
    },
    "table": {
      "headerBackground": "#F8F9FA",
      "rowHover": "#F1F3F4",
      "border": "#E0E0E0",
      "fontSize": "14px"
    },
    "chart": {
      "lineWidth": 2,
      "pointRadius": 3,
      "gridLineColor": "#E0E0E0",
      "tooltipBackground": "#202124",
      "tooltipText": "#FFFFFF"
    }
  },

  "spacing": {
    "xs": "4px",
    "sm": "8px",
    "md": "16px",
    "lg": "24px",
    "xl": "32px"
  },

  "interaction": {
    "transition": "all 0.2s ease-in-out",
    "hoverOpacity": 0.85,
    "focusRing": "0 0 0 3px rgba(26,115,232,0.3)"
  },

  "responsive": {
    "breakpoints": {
      "mobile": "0px",
      "tablet": "768px",
      "desktop": "1280px"
    }
  }
}